<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Tickets web</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a href="/" class="navbar-brand" style="margin-left: 20px;">Grafico del total de los status</a> 
        </nav>
        <div class="container">
            <canvas id="graficaTotal" style="width: 750px; height: 750px;"></canvas>
        </div>
    
        <script>

            var ctx = document.getElementById('graficaTotal').getContext('2d');
    
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Pendiente', 'Realizado'],
                    datasets: [{
                        label: 'Status',
                        data: <%= JSON.stringify(data) %>,
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',  
                            'rgba(255, 99, 132, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    height: 750,
                    width: 750,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        </script>
    </body>
</html>