<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Agendar</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a href="/" class="navbar-brand" style="margin-left: 20px;">Agendar una cita</a> 
        </nav>
<div class="container"> 
    <div class="row mt-5 ">
        

        <div class="col-md-8">
            <h1>Ingresa tus datos</h1>
            <div class="card">
                <div class ="card-body">
                    <form action="/alumno/add" method="POST">
                        <div class="form-group">
                            <label for="curp" class="form-label mt-4">Curp</label>
                            <input type="text" name="curp" class="form-control"  placeholder="Ingresa CURP" required>
                        </div>

                        <div class="form-group">
                            <label for="nombre" class="form-label mt-4">Nombre</label>
                            <input type="text" name="nombre" class="form-control"  placeholder="Ingresa Nombre" required>
                        </div>

                        <div class="form-group">
                            <label for="paterno" class="form-label mt-4">Paterno</label>
                            <input type="text" name="paterno" class="form-control"  placeholder="Ingresa Paterno" required>
                        </div>

                        <div class="form-group">
                            <label for="materno" class="form-label mt-4">Materno</label>
                            <input type="text" name="materno" class="form-control"  placeholder="Ingresa Materno" required>
                        </div>

                        <div class="form-group">
                            <label for="telefono" class="form-label mt-4">Telefono</label>
                            <input type="text" name="telefono" class="form-control" placeholder="ingresa telefono" required>
                        </div>

                        <div class="form-group">
                            <label for="correo" class="form-label mt-4">Correo electrónico</label>
                            <input type="text" name="correo" class="form-control" placeholder="ingresa Correo" required>
                        </div>

                        <div class="form-group">
                            <label for="nivel" class="form-label mt-4">Nivel</label>
                            <select class="form-select" name="nivel" id="nivel">
                                <option>Seleccione</option>
                                <option>Primaria</option>
                                <option>Secundaria</option>
                                <option>Bachillerato</option>
                                <option>Universidad</option>
                            </select>
                        </div>

                        <div class="form-group">
                        <label for="asunto" class="form-label mt-4">Asunto</label>
                        <select class="form-select" name="asunto" id="asunto">
                            <option>Seleccione</option>
                            <option>Entrega de papeleria</option>
                            <option>Solicitud de cita</option>
                            <option>Revisión</option>
                        </select>
                    </div>

                <div class="form-group">
                    <label for="municipio" class="form-label mt-4">Municipio</label>
                    <select class="form-select" id="idmunicipio" name="idmunicipio">
                        <% if (data) { %>
                            <% for (var i = 0; i < data.length; i++) { %>
                                <option value = '<%= data[i].idmunicipio %>'> <%= data[i].nombremunicipio %> </option>
                            <% } %>
                        <% } %>
                    </select>
                </div>

                            <button type="submit" class="btn btn-outline-success btn-lg mt-5 mr-3 mx-3">
                                Guardar 
                            </button>

                            <button type="reset" class="btn btn-outline-light btn-lg mt-5 ml-3">
                                limpiar
                            </button>   

                            <a href="/" class = "btn btn-outline-secondary btn-lg mt-5 mx-3">Regresar</a>
                    </form>
                </div>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <% if (typeof alert != "undefined")  { %>
    <script>
    Swal.fire({
        title:'<%= alertTitle %>',
        text:'<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: false,
        timer: '<%= timer %>'
    }).then(()=>{
        window.location='/<%= ruta %>'
    })
    </script>
    <% } %>
            </div>
        </div>
    </div>
</body>
</html>