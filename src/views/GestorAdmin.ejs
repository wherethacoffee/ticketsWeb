<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Gestor Admin</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a href="/" class="navbar-brand" style="margin-left: 20px;">Gestor de Administradores</a> 
         </nav>
<div class="container"> 
    <div class="row mt-5 ">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>N°</th>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <% if (data) {%>
                        <% for (var i = 0; i < data.length; i++) {%>
                            <tr>
                                <td> <%= (i + 1) %> </td>
                                <td> <%= data[i].usuario %> </td>
                                <td> <%= data[i].contrasena %> </td>
                                <td> 
                                    <a  href= "/update/<%= data[i].idusuario %>" class="btn btn-success" >EDITAR</a>
                                    <a  href= "/delete/<%= data[i].idusuario %>" class="btn btn-danger" >ELIMINAR</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <h2>Ingresa  un nuevo Administrador</h2>
            <div class="card">
                <div class ="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <label for="usuario" class="form-label mt-4">Usuario</label>
                            <input type="text" name="usuario" class="form-control"  placeholder="Ingresa usuario">
                         </div>
                        <div class="form-group">
                             <label for="contraseña" class="form-label mt-4">Contraseña</label>
                             <input type="password" name="contraseña" class="form-control" placeholder="Contraseña">
                        </div>

                             <button type="submit" class="btn btn-light btn-lg mt-5 mr-3">
                                Guardar usuario
                            </button>

                            <button type="reset" class="btn btn-light btn-lg mt-5 ml-3">
                                limpiar
                            </button>
                    </form>
                </div>
            </div>
          </div>
    </div>
</div>

</body>
</html>


