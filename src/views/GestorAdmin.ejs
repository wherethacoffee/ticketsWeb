<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Tickets web</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    </head>
    <body>
        <nav class="navbar navbar-dark bg-dark">
            <a href="/" class="navbar-brand">Gestor Admin</a>
        </nav>
<div class="container"> 
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>N°</th>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <% if (data) {%>
                        <% for (var i = 0; i < data.length; i++) {%>
                            <tr>
                                <td> <%= (i + 1) %> </td>
                                <td> <%= data[i].usuario %> </td>
                                <td> <%= data[i].contrasena %> </td>
                                <td> 
                                    <a  href= "/update/<%= data[i].idusuario %>" class="btn btn-success" >EDITAR</a>
                                    <a  href= "/delete/<%= data[i].idusuario %>" class="btn btn-danger" >ELIMINAR</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="usuario" placeholder="Usuario" class="form-control">
                        </div>
                        <div class="form-group m-5">
                            <input type="pwd" name="contrasena" placeholder="Contraseña" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary" style="background-color: #FF5733;">
                            Guardar usuario
                        </button>
                    </form>
                </div>
            </div>
        </div> 
    </div>
</div>
</body>
</html>