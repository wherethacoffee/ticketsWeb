<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>CRUD nodejs-mysql</title>
    <link
      rel="stylesheet"
      href="https://bootswatch.com/5/flatly/bootstrap.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="/" class="navbar-brand">Gestor Municipio</a>
    </nav>
    <div class="container">
      <div class="row mt-5">
        <div class="col-md-7">
          <table class="table table-bordered table-hover">
            <thead>
              <th>NÂ°</th>
              <th>Nombre</th>
              <th>Acciones</th>
            </thead>
            <tbody>
                <% if (data) {%>
                    <% for (var i = 0; i < data.length; i++) {%>
                        <tr>
                            <td> <%= (i + 1) %> </td>
                            <td> <%= data[i].nombremunicipio %> </td>
                            <td> 
                                <a  href= "" class="btn btn-success" >EDITAR</a>
                                <a  href= "/municipio/delete/<%= data[i].idmunicipio %>" class="btn btn-danger" >ELIMINAR</a>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
          </table>
        </div>

        <div class="col-md-5">
          <div class="card">
            <div class="card-body">
              <form action="/municipio/add" method="POST">
                <div class="form-group">
                  <input
                    type="text"
                    name="nombremunicipio"
                    placeholder="Nombre de municipio"
                    class="form-control"
                  />
                </div>
                <button type="submit" class="btn btn-primary">
                  Guardar municipio
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
